{
    "manifest_version"  : 2,
	
	"name"          : "Career Page Search",
    "version"       : "0.2",
	"options_page": "options.html",
    "description"       : "Search for the keywords \"jobs\", \"careers\" \"opportunities\" and \"employement\" in the given URL.",
    
	"browser_action": {
       "default_icon": "icon.png",
       "default_title": "Simple Search",
       "default_popup": "popup.html"
    },
    "permissions"       :
        [
            "tabs",
			"http://*/",
			"https://*/",
			"storage"
        ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}